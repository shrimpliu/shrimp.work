{{#post}}

  <main>
    <article class="{{post_class}}">

      <header class="postTitle">
        <h1>{{title}}</h1>
        <section>
          <time datetime="{{date format="YYYY-MM-DD HH:mm:ss"}}">{{date format="YYYY-MM-DD HH:mm"}}</time>
          <div class="post-tags">
              <span>{{tags separator=", " prefix=""}}</span>
          </div>
        </section>
      </header>

      <div class="mobileOnly">
        {{navigation}}
      </div>

      <section class="postBody">
        {{content}}
      </section>
      <!-- 畅言打赏 start -->
      <div id="cyReward" role="cylabs" sid="{{id}}" data-use="reward"></div>
      <!-- 畅言打赏 end -->
      <!-- 畅言评论表情 start -->
      <div id="cyEmoji" role="cylabs" sid="{{id}}" data-use="emoji"></div>
      <!-- 畅言评论表情 end -->
      <!-- 畅言评论框 start -->
      <div id="SOHUCS" sid="{{id}}" ></div>
      <!-- 畅言评论框 end -->      

      {{!-- Links to Previous/Next posts --}}

      <div class="otherPost">
        {{#next_post}}
          <div class="prevPost">
            <a href="{{url}}">
              <img src="{{asset "./image/arrowL.png"}}" class="arrow">
              <h5><span>上一篇: </span>{{title}}</h5>
            </a>
          </div>
        {{/next_post}}
        {{#prev_post}}
          <div class="nextPost">
            <a href="{{url}}">
              <h5><span>下一篇: </span>{{title}}</h5>
              <img src="{{asset "./image/arrowR.png"}}" class="arrow">
            </a>
          </div>
        {{/prev_post}}
      </div>

    </article>
  </main>

{{/post}}
